<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/lin_show"
    android:layout_width="match_parent"


    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#4D000000"
        android:foregroundTint="#00FFFFFF"
        android:layout_marginTop="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/id_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/med_name_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Med-name"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/id_s"
                app:layout_constraintTop_toTopOf="@+id/id_s" />

            <TextView
                android:id="@+id/date_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Datum"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toEndOf="@+id/ein"
                app:layout_constraintTop_toTopOf="@+id/ein" />

            <TextView
                android:id="@+id/time_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Uhrzeit"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintTop_toTopOf="@+id/textView6" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="um"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toEndOf="@+id/date_s"
                app:layout_constraintTop_toTopOf="@+id/date_s" />

            <TextView
                android:id="@+id/ein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="#FFFFFF"
                android:text="taked am: "
                app:layout_constraintStart_toStartOf="@+id/med_name_s"
                app:layout_constraintTop_toBottomOf="@+id/med_name_s" />

            <TextView
                android:id="@+id/u"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Uhr"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toEndOf="@+id/time_s"
                app:layout_constraintTop_toTopOf="@+id/time_s" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>